@using Tracking.Entities.Concrete;
@model Product

<div class="container">
<form method="post">
					<input type="hidden" name="Id" value="@Model.Id">
					<div class="modal-body">
						
							<div class="form-group">
								<label for="recipient-name" class="col-form-label">Isim:</label>
								<input type="text" class="form-control" name="name" value="@Model.Name">
							</div>
							<div class="form-group">
								<label for="message-text" class="col-form-label">Fiyat</label>
								<input type="number" class="form-control" name="price" value="@Model.Price" min="1" max="20000">
							</div>
							<div class="form-group">
								<label for="message-text" class="col-form-label">Type:</label>
								<select name="type">
								  @Model.Price=="kg" ? <option value="kg">kg</option> : <option value="kg">kg</option>;
								  @Model.Price=="adet" ? <option value="adet">adet</option> : <option value="adet">adet</option>
								  @Model.Price=="kasa" ? <option value="kasa">kasa</option> : <option value="kasa">kasa</option>
								  @Model.Price=="bund" ? <option value="bund">bund</option> : <option value="kasa">kasa</option> 
								</select>
							</div>
						
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						<button type="submit" class="btn btn-primary">Güncelle</button>
						
					</div>
					
</form>
</div>